<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New</title>
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="./css/login_css.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>

    <div class="container">

        <div class="left-div">
            <div class="left-image">
                <img src="..\images\login.png" alt="">
            </div>
           
        </div>

        <!-- right div start  -->

        <div class="right-div">
            <h4>Create Account</h4>

            <form action="/sign-up.html" class="right-form createNew-form" id="sendDataSignUp">
                <ul>
                    <li id="checkSignUp"></li>
                    <li><input type="text" placeholder="First Name" autocomplete="off" required  name="firstName"></li>
                    <li><input type="text" placeholder="Last Name" autocomplete="off" required  name="lastName"></li>
                    <li><input type="email" placeholder="Email" autocomplete="off" required  name="email"></li> 
                    <li><input type="password" placeholder="Password" autocomplete="off" required  name="password"></li> 
                     <li><input type="password" placeholder="Password Repeat" autocomplete="off" required  name="passwordRepeat"></li> 
                     <li style="padding: 0;"><button formmethod="POST" type="submit" value="1" style="display: none;">Sign up</button></li>                 
                      <li><input type="submit" value="Sign up" formmethod="POST"></li>
                </ul>
                  
            </form>

            <div class="footer createNew-footer">
                <ul>
                    <li><a href="login.html">Back</a></li>
                </ul>
            </div>
            <div class="vr-line"></div>
        </div>

    </div>

    <script>
      $("#sendDataSignUp").submit(function(e) {

    e.preventDefault();

    var form = $(this);
    var url = form.attr('action');
    
    $.ajax({
           type: "POST",
           url: url,
           data: form.serialize(), 
           success: function(data)
           {
               $('#checkSignUp').html(data)
           }
         });

    
});
     
    </script>
    
</body>
</html>