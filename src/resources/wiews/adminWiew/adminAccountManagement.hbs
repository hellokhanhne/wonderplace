{{>adminHeader}}

<div class="col-sm-12">
  <div class="container-fluid " style="margin-top: 5rem;padding-left: 75px;">
    <div class="row">
        <h1 class="ml-5 mr-5">List account admin</h1>
        <button data-toggle="modal" data-target="#add-admin" class="btn btn-primary">Add admin</button>
    </div>
  <form action="" method="post" id="formControl" >
 
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
         <th>Phone</th>
         <th>Address</th>
         <th></th>
         <th></th>
      </tr>
    </thead>
    <tbody>
      
          {{#each listAccount}}
          <tr >
          
          <td>{{sum @index 1}}</td>
          <td>{{this.firstName}}</td>
          <td>{{this.lastName}}</td>
          <td>{{this.email}}</td>
          <td>{{#if this.phone}} {{this.phone}} {{else}}Not update{{/if}}</td>
           <td>{{#if this.address}} {{this.address}} {{else}}Not update{{/if}}</td>
      
        <td><button href="" class="btn btn-sm btn-success " {{#if this.boss}}disabled{{/if}}>Edit</button></td>
        <td><button href=""  class="btn btn-sm btn-danger" {{#if this.boss}}disabled{{/if}} data-id="{{this._id}}"  data-toggle="modal" data-target="#delete-tour">Delete</button></td>
        </tr>
          {{else}}
         <td colspan="5">Not have account</td>
          {{/each}}
      
    </tbody>
  </table>
  </form>
</div>
</div>


<!-- Modal -->
<div class="modal" tabindex="-1" id="delete-tour">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">DELETE ADMIN</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure to delete ?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" onclick="deleteConfim()">Delete</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
 {{!-- end modal  --}}
 <!-- add admin modal -->
<div class="modal" tabindex="-1" id="add-admin">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">ADD ADMIN</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <form action="" method="post">
              <input type="text" class="form-control mb-2" placeholder="First name">
              <input type="text" class="form-control mb-2" placeholder="Last name">
              <input type="email" class="form-control mb-2" placeholder="Email">
              <input type="password" class="form-control mb-2" placeholder="Password">
              <input type="number" class="form-control mb-2" placeholder="Phone">
              <input type="address" class="form-control mb-2" placeholder="Address">
          </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" onclick="">Add</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
