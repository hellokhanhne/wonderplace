                    <input type="text" class="form-control"  aria-describedby="nameHelp" placeholder="Enter startPlace" name="startPlace">
                  </div>
    
                  <div class="form-group">
                    <label for="name">Tour time</label>
                    <input type="text" class="form-control"  aria-describedby="nameHelp" placeholder="Enter time" name="time">
                  </div>
           
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
     </div>
   
