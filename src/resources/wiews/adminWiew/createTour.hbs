     <div class="container" style="margin-top: 5rem;">
        <form action="/admin/createTour" method="POST">
            <div class="form-group">
              <label for="name">Tour name</label>
              <input type="text" class="form-control"  aria-describedby="nameHelp" placeholder="Enter name" name="name">
            </div>

             <div class="form-group">
              <label for="name">City destination</label>
              <input type="text" class="form-control"  aria-describedby="nameHelp" placeholder="Enter name" name="cityDestination">
            </div>
          
                <div class="form-group">
                  <label for="exampleFormControlFile1">img file </label>
                  <input type="file" class="form-control-file"  name="img">
                </div>
    
                <div class="form-group">
                    <label for="name">Tour description</label>
                    <input type="text" class="form-control"  aria-describedby="descriptionHelp" placeholder="Enter description" name="description">
                  </div>
    
                  <div class="form-group">
                    <label for="name">Tour price</label>
                    <input type="number" class="form-control"  aria-describedby="nameHelp" placeholder="Enter name" name="price">
                  </div>
    
