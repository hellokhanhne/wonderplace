{{>adminHeader}}
     <div class="container" style="margin-top: 5rem;">
        <form action="/admin/updateTour/{{tour._id}}?_method=PUT" method="post">
            <div class="form-group">
              <label for="name">Tour name</label>
              <input value="{{tour.name}}" type="text" class="form-control"  aria-describedby="nameHelp" placeholder="Enter name" name="name">
            </div>
           <div class="form-group">
              <label for="name">City destination</label>
              <input type="text" class="form-control"  aria-describedby="nameHelp" value="{{tour.cityDestination}}" name="cityDestination">
            </div>
                <div class="form-group">
                  <label for="exampleFormControlFile1">img file </label>
                  <input value="{{tour.img}}" type="text" class="form-control-file"  name="img">
                </div>
    
                <div class="form-group">
                    <label for="name">Tour description</label>
                    <input value="{{tour.description}}" type="text" class="form-control"  aria-describedby="descriptionHelp" placeholder="Enter description" name="description">
                  </div>
    
                  <div class="form-group">
                    <label for="name">Tour price</label>
                    <input value="{{tour.price}}" type="number" class="form-control"  aria-describedby="nameHelp" placeholder="Enter name" name="price">
                  </div>
    
                  <div class="form-group">
                    <label for="name">Tour price Sale</label>
                    <input value="{{tour.priceSale}}" type="number" class="form-control"  aria-describedby="nameHelp" placeholder="Enter name" name="priceSale">
                  </div>
    
                  <div class="form-group">
                    <label for="name">Tour startDay</label>
                    <input value="{{tour.startDay}}" type="text" class="form-control"  aria-describedby="nameHelp" placeholder="Enter startDay" name="startDay">
                  </div>
    
                  <div class="form-group">
                    <label for="name">Tour countLeft</label>
                    <input value="{{tour.countLeft}}" type="number" class="form-control"  aria-describedby="nameHelp" placeholder="Enter countLeft" name="countLeft">
                  </div>
                      
                  <div class="form-group">
                    <label for="exampleFormControlFile1">img1 file </label>
                    <input value="{{tour.img1}}" type="text" class="form-control-file"  name="img1">
                  </div>
    
                    <div class="form-group">
                    <label for="exampleFormControlFile1">img2 file </label>
                    <input value="{{tour.img2}}" type="text" class="form-control-file"  name="img2">
                  </div> 
    
                   <div class="form-group">
                    <label for="exampleFormControlFile1">img3 file </label>
                    <input value="{{tour.img3}}" type="text" class="form-control-file"  name="img3">
                  </div>
    
                  <div class="form-group">
                    <label for="name">Tour startPlace</label>
                    <input value="{{tour.startPlace}}" type="text" class="form-control"  aria-describedby="nameHelp" placeholder="Enter startPlace" name="startPlace">
                  </div>
    
                  <div class="form-group">
                    <label for="name">Tour time</label>
                    <input value="{{tour.time}}" type="text" class="form-control"  aria-describedby="nameHelp" placeholder="Enter time" name="time">
                  </div>
           
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
     </div>
   

{{>adminFooter}}